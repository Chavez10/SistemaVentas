@using DAL.Models;
@{
    if ((int)Session["Rol"] == (int)Enums.rol.vendedor)
    {
        Layout = "~/Views/Shared/_LayoutVendedor.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    ViewBag.Title = "Index";

}

<script src="~/Scripts/js/Producto.js" type="text/javascript"></script>
<br />
<style>
    .buttons-excel {
        background: #197932 !important;
        color:white !important;
    }

    .buttons-pdf {
        background-color: #8d0909 !important;
        color: white !importants;
    }
</style>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <center>
                <h2 class="card-title">Productos</h2>
            </center>
            @if ((int)Session["Rol"] == (int)Enums.rol.admin)
            {
        <a href="/Producto/CreateOrUpdateProducto/" class="btn btn-primary"> Crear Producto</a>
            }
            <br /><br />
            <table class="table table-hover table-striped text-center" id="TableProductos">
                <thead>
                    <tr>
                        <th>Nombre Producto</th>
                        <th>Categoria</th>
                        <th>Existencia</th>
                        <th>Precio</th>
                        <th>ACCIONES</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

