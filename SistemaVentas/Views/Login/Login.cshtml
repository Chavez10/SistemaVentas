@using DAL.Models;
@model Usuarios
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutGeneral.cshtml";
}

<div class="container">
    <hr /><br />
    <div class="row justify-content-md-center align-items-center">
        <div class="card text-center" style="width:40rem;">
            <div class="card-header">
                <h3>Inicio de Sesión</h3>
            </div>
            <br />
            <div align="center">
                <img src="~/images/usuario.png" height="100" width="100" alt="usuario loging" />
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                {
                    <div class="form-group">
                        <label for="user"><b>Usuario:</b></label>
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UserName, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="pass"><b>Contraseña:</b></label>
                        @Html.PasswordFor(model => model.pass, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.pass, null, new { @class = "text-danger" })
                    </div>
                    if (ViewBag.ErrorUser != null && ViewBag.ErrorUser == true)
                    {
                        <br />
                        <center>
                            <label class="text-danger">El usuario o Contraseña son incorrectos</label>
                        </center>
                        <br />
                    }
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" value="Ingresar" />
                        <br /><br>
                        <label>¿No tienes cuenta?, para crear una da <a href="/User/CreateOrUpdateUser" style="color:blue;text-decoration:none">clic aquí</a></label>
                    </div>

                }
            </div>
            @*<div class="card-footer text-muted">
                    &copy; 2021 - Tienda Online
                </div>*@
        </div>
    </div>
</div>
    

